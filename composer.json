    "license": "MIT",
    "type": "library",
    "keywords": ["php", "math", "bcmath"],
    "authors": [
        { "name": "Derrek Bertrand", "email": "derrekbertand@gmail.com" },
        { "name": "Sergio Compean", "email": "scompean24@gmail.com" }
